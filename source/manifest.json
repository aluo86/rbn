{
  "manifest_version": 2,

  "name": "RBN",
  "description": "Keep up with all your review board items",
  "version": "1.2",

  "permissions": [
    "https://rb.corp.linkedin.com/api/",
    "notifications"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "js/lib/jquery-1.8.2.js",
      "js/lib/underscore.js",
      "js/lib/moment.js",
      "js/lib/string-format.js",
      "js/setup.js",
      "js/constants.js",
      "js/dal.js",
      "js/lib/fiber.js",
      "js/utils/mixins.js",
      "js/settings.js",
      "js/notifier.js"
    ],
    "persistent": true
  }
}